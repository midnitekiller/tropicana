<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.direct2guests.d2g_tv.Activities.MainActivity">

    <RelativeLayout
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextClock
            android:id="@+id/textClock4"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/dateTxtmain"
            android:layout_marginStart="249dp"
            android:fontFamily="monospace"
            android:text="textClock"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/dateTxtmain4"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/uid"
            android:layout_marginStart="21dp"
            android:fontFamily="monospace"
            android:paddingTop="0dp"
            android:text="@string/launcherDate"
            android:textColor="@color/orange"
            android:textSize="18sp"
            android:typeface="monospace"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/uid4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/welcomeTxtV4"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="64dp"
            android:fontFamily="cursive"
            android:text="@string/indexWelcome"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#fff"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/guestNameTxtV4"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="447dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="64dp"
            android:layout_toEndOf="@+id/welcomeTxtV"
            android:fontFamily="cursive"
            android:text="@string/indexGuestName"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="35sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/hotelNameTxtV4"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/welcomeTxtV"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn_transparent"
            android:fontFamily="cursive"
            android:text="@string/indexHotelName"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="45sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="193dp"
            android:layout_height="97dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/hotelkimberlylogo2"
            android:visibility="gone">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/dateTxtmain"
            android:layout_marginBottom="19dp"
            android:layout_marginStart="12dp">

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="40dp"

                android:layout_alignParentStart="true"


                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:background="@drawable/btn_transparent"
                android:focusableInTouchMode="true"
                android:onClick="continueButton"
                android:text="@string/indexContinueButton"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="normal">

                <requestFocus />
            </Button>

        </RelativeLayout>

        <requestFocus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
