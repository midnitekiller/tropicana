<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/showhouse"
        android:layout_width="510dp"
        android:layout_height="550dp"
        android:background="@drawable/housekeepingmodal_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/HousekeepingTitleS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#bb000000"
            android:padding="20dp"
            android:text="HOUSEKEEPING"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/checkinDateDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HousekeepingTitleS"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:text="Thu June 29 2017"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/HousekeepingStatusS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkinDateDialog"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"
            android:text="Status: "
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/CancelHouseKeeping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HousekeepingStatusS"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:text="Cancel Housekeeping"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="20sp" />

        <Button
            android:id="@+id/TodayHKBtnS"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/CancelHouseKeepingS"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="235dp"
            android:background="@drawable/confirm_button"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:focusedByDefault="true"
            android:text="TODAY"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/WholeHKBtn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/TodayHKBtnS"
            android:layout_alignStart="@+id/TodayHKBtnS"
            android:layout_marginStart="-3dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/confirm_button"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:text="WHOLE STAY"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/RequestHouseKeepingS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/WholeHKBtn"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="Request Housekeeping"
            android:textAlignment="center"
            android:textColor="#393939"
            android:textSize="20sp" />

        <Button
            android:id="@+id/RequestHKBtnS"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:background="@drawable/confirm_button"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:text="REQUEST HOUSEKEEPING"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
